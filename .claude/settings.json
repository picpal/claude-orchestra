{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    }
  },
  "permissions": {
    "allow": [
      "Bash(npm run *)",
      "Bash(npx *)",
      "Bash(pnpm *)",
      "Bash(yarn *)",
      "Bash(bun *)",
      "Bash(git *)",
      "Bash(cat *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(tsc *)",
      "Bash(eslint *)",
      "Bash(prettier *)",
      "Bash(jest *)",
      "Bash(vitest *)",
      "Bash(playwright *)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(sudo *)",
      "Bash(chmod 777 *)"
    ]
  },
  "agents": {
    "maestro": {
      "model": "opus",
      "allowedTools": ["Task", "Read", "Write", "Bash", "AskUserQuestion"]
    },
    "planner": {
      "model": "opus",
      "allowedTools": ["Read"],
      "denyTools": ["Task", "Edit", "Write", "Bash", "Skill"]
    },
    "interviewer": {
      "model": "opus",
      "allowedTools": ["AskUserQuestion", "Write(.orchestra/**/*.md)", "Read"],
      "denyTools": ["Task", "Edit"]
    },
    "plan-checker": {
      "model": "sonnet",
      "allowedTools": ["Read", "Grep", "Glob"]
    },
    "plan-reviewer": {
      "model": "sonnet",
      "allowedTools": ["Read", "Grep", "Glob"]
    },
    "architecture": {
      "model": "opus",
      "allowedTools": ["Read", "Grep", "Glob"],
      "denyTools": ["Task", "Edit", "Write", "Bash"]
    },
    "searcher": {
      "model": "sonnet",
      "allowedTools": ["WebSearch", "WebFetch", "Bash"]
    },
    "explorer": {
      "model": "haiku",
      "allowedTools": ["Glob", "Grep", "Read", "Bash"]
    },
    "image-analyst": {
      "model": "sonnet",
      "allowedTools": ["Read"]
    },
    "high-player": {
      "model": "opus",
      "allowedTools": ["Read", "Edit", "Write", "Bash", "Glob", "Grep"]
    },
    "low-player": {
      "model": "sonnet",
      "allowedTools": ["Read", "Edit", "Write", "Bash", "Grep"]
    },
    "conflict-checker": {
      "model": "sonnet",
      "allowedTools": ["Read", "Grep", "Glob", "Bash(git diff*)", "Bash(git status*)", "Bash(git log*)", "Bash(npm test*)", "Bash(yarn test*)", "Bash(pnpm test*)", "Bash(bun test*)", "Bash(tsc *)", "Bash(eslint *)"],
      "denyTools": ["Task", "Edit", "Write"]
    }
  },
  "defaults": {
    "model": "sonnet",
    "context": "dev"
  }
}
